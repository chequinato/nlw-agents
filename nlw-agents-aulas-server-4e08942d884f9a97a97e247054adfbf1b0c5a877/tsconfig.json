{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator"
    ],

    "target": "ES2022",
    "module": "nodenext",              // ← Mudança crucial
    "moduleResolution": "nodenext",    // ← Mudança crucial

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,

    "noEmit": false,

    // Essa opção moderna resolve o problema de extensão automaticamente
    "verbatimModuleSyntax": true
  },

  "include": ["src"]
}