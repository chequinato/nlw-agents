{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "22.0.0",
  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator"
    ],

    "module": "ESNext",
    "target": "ES2022",

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,

    "noEmit": false,
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": ["src"]
}
